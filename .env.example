PORT=3000
JWT_SECRET=dev-secret
# When set, enables BullMQ queue in JobsService/QueueService
REDIS_URL=redis://localhost:6379/0

# PostgreSQL connection
# Option A: single DATABASE_URL
DATABASE_URL=postgres://user:pass@localhost:5432/clipefy
# Option B: discrete vars (used when DATABASE_URL is not set)
DB_HOST=localhost
DB_PORT=5432
DB_USER=user
DB_PASSWORD=pass
DB_NAME=dbname

# S3 / MinIO
S3_ENDPOINT=http://localhost:9000
S3_REGION=us-east-1
S3_BUCKET=dbname
S3_ACCESS_KEY_ID=user
S3_SECRET_ACCESS_KEY=pass
S3_FORCE_PATH_STYLE=true
